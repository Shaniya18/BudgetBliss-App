<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <View
            android:id="@+id/priority_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/green_shape"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/note_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your note here"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLength="30"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/priority_one"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/amount_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:layout_below="@id/note_one"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/date_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 May 2025 1.29"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@id/amount_one"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
